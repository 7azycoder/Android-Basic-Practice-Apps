<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#87b553"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="28dp"
    android:paddingRight="28dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">
    <TextView
        android:id="@+id/activityName"
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Detail Activity"
        android:textColor="#ffffff"
        android:textSize="40sp"
        />
    <Spinner
        android:id="@+id/spinnerSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:layout_centerInParent="true"
        android:background="#1da38c"
        android:drawSelectorOnTop="true"
        android:entries="@array/actions"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:weightSum="2">
        <Button
            android:id="@+id/returnToSecondActivity"
            android:background="#b24261"
            android:text="Return Selection"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:padding="20dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

        </Button>
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/performImplicit"
            android:background="#1da38c"
            android:text="Perform Selection"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:padding="20dp"/>

    </LinearLayout>


</RelativeLayout>